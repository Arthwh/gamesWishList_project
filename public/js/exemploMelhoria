router.get('/all-data', async (req, res) => {
    const { limit, page, search, filter } = req.query;
    try {
        const [genres, platforms, games] = await Promise.all([
            getAllGenres(),
            getAllPlatforms(),
            getGames({ limit, page, search, filter })
        ]);
        res.json({ genres, platforms, games });
    } catch (error) {
        res.status(500).json({ error: 'Erro ao buscar dados' });
    }
});